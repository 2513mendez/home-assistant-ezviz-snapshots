{
  "name": "EZVIZ Snapshots API/MQTT",
  "version": "1.0.7",
  "slug": "ezviz_snapshots_core",
  "description": "Captura snapshots de cámaras EZVIZ y publica JSON por MQTT en ezviz/snapshot/<nombre_camara>. Token automático (con cache) y uso de areaDomain devuelto por la API. 'retain', 'quality' y credenciales MQTT configurables en la UI.",
  "arch": [
    "armv7",
    "armhf",
    "aarch64",
    "amd64",
    "i386"
  ],
  "startup": "once",
  "boot": "manual",
  "options": {
    "app_key": "",
    "app_secret": "",
    "retain": true,
    "quality": 0,
    "mqtt_host": "core-mosquitto",
    "mqtt_port": 1883,
    "mqtt_user": "",
    "mqtt_password": "",
    "camaras": []
  },
  "schema": {
    "app_key": "str",
    "app_secret": "str",
    "retain": "bool",
    "quality": "int?",
    "mqtt_host": "str",
    "mqtt_port": "int",
    "mqtt_user": "str",
    "mqtt_password": "str",
    "camaras": [
      {
        "nombre": "str",
        "serial": "str",
        "channel": "int",
        "quality": "int?"
      }
    ]
  },
  "init": false,
  "host_network": false,
  "map": [
    "config:rw"
  ],
  "privileged": [],
  "apparmor": false
}
