{
  "name": "EZVIZ Snapshots API/MQTT",
  "version": "1.0.5",
  "slug": "ezviz_snapshots_core",
  "description": "Captura snapshots de cámaras EZVIZ usando la API oficial. Publica JSON por MQTT en ezviz/snapshot/<nombre_camara>. Usa automáticamente el areaDomain del token. 'retain' y 'quality' configurables en la UI.",
  "arch": [
    "armv7",
    "armhf",
    "aarch64",
    "amd64",
    "i386"
  ],
  "startup": "once",
  "boot": "manual",
  "options": {
    "app_key": "",
    "app_secret": "",
    "retain": true,
    "quality": 3,
    "camaras": []
  },
  "schema": {
    "app_key": "str",
    "app_secret": "str",
    "retain": "bool",
    "quality": "int?",
    "camaras": [
      {
        "nombre": "str",
        "serial": "str",
        "channel": "int"
      }
    ]
  },
  "init": false,
  "host_network": false,
  "map": [
    "config:rw"
  ],
  "privileged": [],
  "apparmor": false
}
