{
  "name": "EZVIZ Snapshots API/MQTT",
  "version": "1.0.4",
  "slug": "ezviz_snapshots_core",
  "description": "Captura snapshots de cámaras EZVIZ usando la API oficial. Publica automáticamente la URL de la imagen en el topic MQTT: ezviz/snapshot/<nombre_camara>. Puedes configurar si el mensaje se publica con el flag retain desde la UI.",
  "arch": [
    "armv7",
    "armhf",
    "aarch64",
    "amd64",
    "i386"
  ],
  "startup": "once",
  "boot": "manual",
  "options": {
    "app_key": "",
    "app_secret": "",
    "token": "",
    "retain": true,
    "camaras": []
  },
  "schema": {
    "app_key": "str",
    "app_secret": "str",
    "token": "str?",
    "retain": "bool",
    "camaras": [
      {
        "nombre": "str",
        "serial": "str",
        "channel": "int"
      }
    ]
  },
  "init": false,
  "host_network": false,
  "map": [
    "config:rw"
  ],
  "privileged": [],
  "apparmor": false
}
